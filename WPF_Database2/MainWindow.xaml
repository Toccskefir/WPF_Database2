<Window x:Class="WPF_Database2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Database2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Label Content="Állatkertbe költöző állatok" HorizontalContentAlignment="Center" FontSize="30" DockPanel.Dock="Top"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Center">
                <Button x:Name="buttonCreate" Content="Hozzáad" Width="100" Margin="10" Click="buttonCreate_Click"/>
                <Button x:Name="buttonUpdate" Content="Módosít" Width="100" Margin="10" Click="buttonUpdate_Click"/>
                <Button x:Name="buttonDelete" Content="Töröl" Width="100" Margin="10" Click="buttonDelete_Click"/>
            </StackPanel>
            <DataGrid x:Name="dataGridAnimals"/>
        </DockPanel>
    </Grid>
</Window>
